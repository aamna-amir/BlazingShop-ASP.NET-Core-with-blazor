@page "/parentcomponent"

<h3 class="text-danger">Parent-Child-Component</h3>
<BlazingShop.Pages.Components.ChildComponent 
    OnClickMethod="@ShowMessage"
    Title="This title passed by child componet">
    This content displayed between the child component tag inside parent component.
</BlazingShop.Pages.Components.ChildComponent>

<b>@messageText</b>

@code {
    private string messageText;
    private void ShowMessage()
    {
        messageText = "Blazzing text from parent.";
    }
}
